{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "paths": {
      "/lib/*": [
        "./public/lib/*",
        "./src/lib/*",
        "./lib/*"
      ],
      "astro/tsconfigs/*": [
        "node_modules/astro/tsconfigs/*"
      ]
    }
  },
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*",
    "lib/**/*",
    "src/env.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}