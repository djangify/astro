---
// src/components/CartDropdown.astro
// This component is already integrated into CartIcon.astro
// This file provides enhanced cart dropdown functionality

export interface Props {
  className?: string;
}

const { className = "" } = Astro.props;
---

<!-- Enhanced Cart Dropdown with Better UX -->
<div class={`cart-dropdown-enhanced ${className}`}>
  <!-- Cart Items with Enhanced Layout -->
  <div id="enhanced-cart-items" class="hidden">
    <div
      class="p-4 bg-gradient-to-r from-teal-50 to-blue-50 border-b border-gray-100"
    >
      <div class="flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900">Shopping Cart</h3>
        <button
          id="clear-cart-button"
          class="text-xs text-gray-500 hover:text-red-600 transition-colors"
          title="Clear cart"
        >
          Clear All
        </button>
      </div>
      <div id="cart-summary-stats" class="mt-2 text-sm text-gray-600">
        <span id="cart-items-summary">0 items</span>
      </div>
    </div>

    <!-- Enhanced Items List with Better Styling -->
    <div id="enhanced-cart-items-list" class="max-h-80 overflow-y-auto">
      <!-- Items will be populated by JavaScript -->
    </div>

    <!-- Enhanced Cart Footer -->
    <div class="p-4 bg-gray-50 border-t border-gray-200">
      <!-- Cart Type Badge -->
      <div id="enhanced-cart-type-badge" class="hidden mb-3">
        <span
          class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium"
        >
          <span id="enhanced-cart-type-icon" class="mr-2"></span>
          <span id="enhanced-cart-type-text"></span>
        </span>
      </div>

      <!-- Subtotal with larger text -->
      <div class="flex justify-between items-center mb-4">
        <span class="text-lg font-medium text-gray-700">Subtotal:</span>
        <span
          id="enhanced-cart-subtotal"
          class="text-xl font-bold text-gray-900">$0.00</span
        >
      </div>

      <!-- Action Buttons with Better Styling -->
      <div class="space-y-3">
        <a
          href="/cart"
          class="block w-full text-center bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105"
        >
          View Full Cart
        </a>
        <a
          href="/checkout"
          id="enhanced-checkout-button"
          class="block w-full text-center bg-gradient-to-r from-teal-600 to-blue-600 text-white hover:from-teal-700 hover:to-blue-700 font-bold py-3 px-4 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-lg"
        >
          Proceed to Checkout
        </a>
      </div>

      <!-- Trust Signals -->
      <div class="mt-4 pt-4 border-t border-gray-200">
        <div
          class="flex items-center justify-center space-x-4 text-xs text-gray-500"
        >
          <div class="flex items-center">
            <svg
              class="w-4 h-4 mr-1 text-green-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
              ></path>
            </svg>
            Secure
          </div>
          <div class="flex items-center">
            <svg
              class="w-4 h-4 mr-1 text-blue-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
            </svg>
            Easy Returns
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Empty State -->
  <div id="enhanced-cart-empty" class="hidden p-8 text-center">
    <div class="relative">
      <!-- Animated cart icon -->
      <div
        class="mx-auto w-16 h-16 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center mb-4"
      >
        <svg
          class="w-8 h-8 text-gray-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 7m0 0l-1.5-5M7 13l-2-8m0 0h16"
          ></path>
        </svg>
      </div>

      <h3 class="text-lg font-medium text-gray-900 mb-2">Your cart is empty</h3>
      <p class="text-gray-500 mb-6 text-sm">
        Discover our amazing products and start shopping!
      </p>

      <!-- Quick action buttons -->
      <div class="space-y-2">
        <a
          href="/ecommerce"
          class="inline-block bg-gradient-to-r from-teal-600 to-blue-600 text-white hover:from-teal-700 hover:to-blue-700 font-medium px-6 py-3 rounded-lg transition-all duration-200 transform hover:scale-105 shadow-md"
        >
          Browse Products
        </a>
        <div class="flex justify-center space-x-4 text-sm">
          <a
            href="/ecommerce?product_type=digital"
            class="text-purple-600 hover:text-purple-700 transition-colors"
          >
            ðŸ“± Digital
          </a>
          <a
            href="/ecommerce?product_type=physical"
            class="text-blue-600 hover:text-blue-700 transition-colors"
          >
            ðŸ“¦ Physical
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Error State -->
  <div id="enhanced-cart-error" class="hidden p-6 text-center">
    <div
      class="mx-auto w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mb-4"
    >
      <svg
        class="w-6 h-6 text-red-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">Unable to load cart</h3>
    <p class="text-gray-500 mb-4 text-sm">
      There was a problem loading your cart. Please try again.
    </p>
    <button
      id="enhanced-retry-cart-load"
      class="inline-block bg-teal-600 text-white hover:bg-teal-700 font-medium px-4 py-2 rounded-lg transition-colors"
    >
      Try Again
    </button>
  </div>
</div>

<script>
  // Enhanced Cart Dropdown functionality
  document.addEventListener("DOMContentLoaded", function () {
    const clearCartButton = document.getElementById("clear-cart-button");
    const retryButton = document.getElementById("enhanced-retry-cart-load");

    // Clear cart functionality
    clearCartButton?.addEventListener("click", async function () {
      if (
        confirm(
          "Are you sure you want to clear your cart? This action cannot be undone.",
        )
      ) {
        clearCartButton.textContent = "Clearing...";
        clearCartButton.classList.add("opacity-50");

        try {
          const result = await window.cartManager.clearCart();
          if (result.success) {
            // Cart will automatically update via the cart manager
          } else {
            alert(result.message || "Failed to clear cart");
          }
        } catch (error) {
          console.error("Error clearing cart:", error);
          alert("Failed to clear cart. Please try again.");
        }

        clearCartButton.textContent = "Clear All";
        clearCartButton.classList.remove("opacity-50");
      }
    });

    // Enhanced retry functionality
    retryButton?.addEventListener("click", function () {
      if (typeof window.cartManager !== "undefined") {
        window.cartManager.loadCartData();
      }
    });

    // Subscribe to cart changes for enhanced UI updates
    if (typeof window.cartManager !== "undefined") {
      window.cartManager.subscribe((cartData) => {
        updateEnhancedCartUI(cartData);
      });
    }

    // Enhanced cart UI update function
    function updateEnhancedCartUI(cartData: any) {
      const itemsSummary = document.getElementById("cart-items-summary");
      const enhancedItemsList = document.getElementById(
        "enhanced-cart-items-list",
      );
      const enhancedSubtotal = document.getElementById(
        "enhanced-cart-subtotal",
      );
      const enhancedTypeBadge = document.getElementById(
        "enhanced-cart-type-badge",
      );
      const enhancedTypeIcon = document.getElementById(
        "enhanced-cart-type-icon",
      );
      const enhancedTypeText = document.getElementById(
        "enhanced-cart-type-text",
      );

      if (!cartData) return;

      // Update items summary
      if (itemsSummary) {
        const itemText = cartData.item_count === 1 ? "item" : "items";
        itemsSummary.textContent = `${cartData.item_count} ${itemText}`;
      }

      // Update subtotal
      if (enhancedSubtotal) {
        enhancedSubtotal.textContent = `$${cartData.subtotal.toFixed(2)}`;
      }

      // Update cart type badge
      if (
        cartData.cart_type &&
        enhancedTypeBadge &&
        enhancedTypeIcon &&
        enhancedTypeText
      ) {
        const isDigital = cartData.cart_type === "digital";

        enhancedTypeIcon.textContent = isDigital ? "ðŸ“±" : "ðŸ“¦";
        enhancedTypeText.textContent = isDigital
          ? "Digital Downloads"
          : "Physical Products";

        enhancedTypeBadge.className = `inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
          isDigital
            ? "bg-purple-100 text-purple-800"
            : "bg-blue-100 text-blue-800"
        }`;
        enhancedTypeBadge.classList.remove("hidden");
      }

      // Render enhanced cart items
      if (enhancedItemsList) {
        if (cartData.items && cartData.items.length > 0) {
          enhancedItemsList.innerHTML = cartData.items
            .map(
              (item: any, index: number) => `
            <div class="flex items-center p-4 border-b border-gray-100 last:border-b-0 hover:bg-gray-50 transition-colors">
              <div class="relative">
                <img 
                  src="${item.product.main_image || item.product.featured_image || "https://via.placeholder.com/60x60/e5e7eb/6b7280?text=No+Image"}" 
                  alt="${item.product.name}"
                  class="w-14 h-14 object-cover rounded-lg shadow-sm"
                >
                <span class="absolute -top-1 -right-1 bg-teal-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center font-bold">
                  ${item.quantity}
                </span>
              </div>
              
              <div class="flex-1 ml-4">
                <h4 class="text-sm font-semibold text-gray-900 line-clamp-2 leading-tight">${item.product.name}</h4>
                <div class="flex items-center justify-between mt-2">
                  <span class="text-xs text-gray-500">
                    ${item.product.product_type === "digital" ? "ðŸ“±" : "ðŸ“¦"} 
                    $${item.unit_price.toFixed(2)} each
                  </span>
                  <span class="text-sm font-bold text-teal-600">$${item.total_price.toFixed(2)}</span>
                </div>
              </div>
              
              <div class="ml-3 flex flex-col space-y-1">
                <button 
                  onclick="window.cartManager.removeCartItem('${item.id}')" 
                  class="text-gray-400 hover:text-red-500 transition-colors p-1 rounded hover:bg-red-50"
                  aria-label="Remove ${item.product.name}"
                  title="Remove item"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </div>
            </div>
          `,
            )
            .join("");
        }
      }
    }
  });
</script>
