---
import BaseLayout from "../layouts/BaseLayout.astro";

const metadata = {
  title: "Support - Corrison",
  description:
    "Get help and support for Corrison. Contact our team for assistance.",
  ignoreTitleTemplate: true,
};
---

<BaseLayout>
  <main class="px-6 py-16 mx-auto max-w-4xl lg:px-8">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Support Center</h1>
      <p class="text-xl text-gray-600">Need help? We're here to assist you.</p>
    </div>

    <!-- Contact Information -->
    <div class="grid md:grid-cols-2 gap-8 mb-12">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Get in Touch</h2>
        <div class="space-y-3">
          <p class="text-gray-600">
            <strong>Email:</strong> support@corrisonapi.com
          </p>
          <p class="text-gray-600">
            <strong>Response Time:</strong> Within 24 hours
          </p>
          <p class="text-gray-600">
            <strong>Support Hours:</strong> Monday - Friday, 9AM - 5PM GMT
          </p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">
          What We Can Help With
        </h2>
        <ul class="space-y-2 text-gray-600">
          <li>• Account and billing questions</li>
          <li>• Course enrollment and access</li>
          <li>• Appointment booking issues</li>
          <li>• Technical problems</li>
          <li>• Product orders and shipping</li>
        </ul>
      </div>
    </div>

    <!-- Contact Form -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">
        Send us a Message
      </h2>

      <form id="contact-form" class="space-y-6">
        <!-- Name -->
        <div>
          <label
            for="name"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Name *
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
            placeholder="Your full name"
          />
        </div>

        <!-- Email -->
        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Email *
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
            placeholder="your@email.com"
          />
        </div>

        <!-- Subject -->
        <div>
          <label
            for="subject"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Subject *
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
            placeholder="Brief description of your issue"
          />
        </div>

        <!-- Message -->
        <div>
          <label
            for="message"
            class="block text-sm font-medium text-gray-700 mb-2"
          >
            Message *
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-teal-500 focus:border-teal-500"
            placeholder="Please describe your issue or question..."></textarea>
        </div>

        <!-- Submit Button -->
        <div>
          <button
            type="submit"
            id="submit-button"
            class="w-full bg-teal-600 text-white py-3 px-4 rounded-md hover:bg-teal-700 focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 transition-colors font-medium"
          >
            Send Message
          </button>
        </div>
      </form>

      <!-- Message Display -->
      <div id="form-message" class="hidden mt-4"></div>
    </div>

    <!-- FAQ Section -->
    <div class="mt-12">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6">
        Common Questions
      </h2>
      <div class="space-y-4">
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="font-medium text-gray-900 mb-2">
            How do I reset my password?
          </h3>
          <p class="text-gray-600">
            Go to the login page and click "Forgot Password" to receive a reset
            link.
          </p>
        </div>

        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="font-medium text-gray-900 mb-2">
            How do I access my courses?
          </h3>
          <p class="text-gray-600">
            After logging in, visit your dashboard to see all your enrolled
            courses.
          </p>
        </div>

        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="font-medium text-gray-900 mb-2">
            Can I cancel my appointment?
          </h3>
          <p class="text-gray-600">
            Yes, you can cancel appointments from your dashboard or by
            contacting support.
          </p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById(
      "contact-form",
    ) as HTMLFormElement | null;
    const messageDiv = document.getElementById(
      "form-message",
    ) as HTMLDivElement | null;

    if (form && messageDiv) {
      form.addEventListener("submit", function (e) {
        e.preventDefault();

        // Show placeholder message
        messageDiv.className =
          "mt-4 p-4 bg-blue-50 border border-blue-200 rounded-md";
        messageDiv.innerHTML = `
          <p class="text-blue-800">
            <strong>Form submitted!</strong> This is a placeholder. The contact form will be connected to the backend API later.
          </p>
        `;
        messageDiv.classList.remove("hidden");

        // Reset form
        form.reset();
      });
    }
  });
</script>
