---
// src/pages/order-success.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// SEO meta information
const metaTitle = "Order Complete – Corrison";
const metaDescription =
  "Thank you for your purchase! Your digital products are ready for download after email verification.";

// Get environment variables
const apiUrl =
  import.meta.env.PUBLIC_API_BASE_URL ||
  "https://corrison.corrisonapi.com/api/v1";
---

<BaseLayout>
  <Header slot="header" />
  <title slot="title">{metaTitle}</title>
  <meta slot="head" name="description" content={metaDescription} />
  <meta slot="head" property="og:title" content={metaTitle} />
  <meta slot="head" property="og:description" content={metaDescription} />
  <meta slot="head" property="og:type" content="website" />

  <div class="min-h-screen bg-gray-50">
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-2xl mx-auto">
        <!-- Loading State -->
        <div id="loading-state" class="text-center">
          <div
            class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"
          >
          </div>
          <p class="text-gray-600">Confirming your order...</p>
        </div>

        <!-- Success State -->
        <div id="success-state" class="hidden">
          <div
            class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center"
          >
            <div
              class="w-20 h-20 mx-auto bg-green-100 rounded-full flex items-center justify-center mb-6"
            >
              <svg
                class="w-10 h-10 text-green-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
            </div>

            <h1 class="text-3xl font-bold text-gray-900 mb-4">
              Payment Successful!
            </h1>

            <!-- Main Message -->
            <div id="main-message" class="mb-8">
              <p class="text-lg text-gray-600 mb-4">
                Your payment was successful! To access your downloads, please
                log in to your account.
              </p>

              <!-- Verification Required Notice -->
              <div
                id="verification-notice"
                class="hidden bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6 text-left"
              >
                <div class="flex">
                  <div class="flex-shrink-0">
                    <svg
                      class="h-5 w-5 text-blue-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                      ></path>
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-blue-800">
                      Email Verification Required
                    </h3>
                    <div class="mt-2 text-sm text-blue-700">
                      <p>
                        If you just created an account, check your email to
                        verify it first. The verification email should arrive
                        within minutes - please check your spam folder if you
                        don't see it.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div id="order-details" class="hidden">
              <div class="bg-gray-50 rounded-lg p-6 mb-6 text-left">
                <h2 class="font-semibold text-gray-900 mb-3">Order Details</h2>
                <p class="text-sm text-gray-600">
                  Order ID: <span id="order-id" class="font-mono"></span>
                </p>
                <p class="text-sm text-gray-600">
                  Total: $<span id="order-total"></span>
                </p>
                <p id="email-info" class="text-sm text-gray-600 mt-2 hidden">
                  Confirmation sent to: <span
                    id="order-email"
                    class="font-medium"></span>
                </p>
              </div>
            </div>

            <div class="space-y-4">
              <a
                href="/login"
                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
              >
                Log In to Access Downloads
              </a>

              <div class="flex items-center justify-center space-x-4 text-sm">
                <a
                  href="/ecommerce/products"
                  class="text-gray-600 hover:text-gray-900 underline"
                >
                  Continue Shopping
                </a>
                <span class="text-gray-400">•</span>
                <a
                  href="/contact"
                  class="text-gray-600 hover:text-gray-900 underline"
                >
                  Need Help?
                </a>
              </div>
            </div>
          </div>

          <!-- Email Reminder -->
          <div class="mt-6 text-center">
            <p class="text-sm text-gray-600">
              <svg
                class="inline w-4 h-4 mr-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              Check your email for order confirmation and download links
            </p>
          </div>
        </div>

        <!-- Error State -->
        <div id="error-state" class="hidden">
          <div
            class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center"
          >
            <div
              class="w-20 h-20 mx-auto bg-red-100 rounded-full flex items-center justify-center mb-6"
            >
              <svg
                class="w-10 h-10 text-red-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>

            <h1 class="text-3xl font-bold text-gray-900 mb-4">
              Payment Not Confirmed
            </h1>
            <p class="text-lg text-gray-600 mb-8">
              We couldn't confirm your payment. Please contact support if you
              were charged.
            </p>

            <div class="space-y-4">
              <a
                href="/checkout"
                class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors"
              >
                Try Again
              </a>

              <p class="text-sm text-gray-600">
                Contact support: support@corrison.com
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <Footer slot="footer" />

  <!-- Pass API URL via data attribute -->
  <script type="application/json" id="order-config" data-api-url={apiUrl}
  ></script>

  <script is:inline>
    (function () {
      // Get API URL from config
      var configEl = document.getElementById("order-config");
      var API_BASE = configEl
        ? configEl.getAttribute("data-api-url")
        : "https://corrison.corrisonapi.com/api/v1";

      function showLoading() {
        document.getElementById("loading-state").classList.remove("hidden");
        document.getElementById("success-state").classList.add("hidden");
        document.getElementById("error-state").classList.add("hidden");
      }

      function showSuccess() {
        document.getElementById("loading-state").classList.add("hidden");
        document.getElementById("success-state").classList.remove("hidden");
        document.getElementById("error-state").classList.add("hidden");
      }

      function showError() {
        document.getElementById("loading-state").classList.add("hidden");
        document.getElementById("success-state").classList.add("hidden");
        document.getElementById("error-state").classList.remove("hidden");
      }

      function checkPaymentStatus() {
        // Get payment intent from URL
        var urlParams = new URLSearchParams(window.location.search);
        var paymentIntent = urlParams.get("payment_intent");
        var shouldVerify = urlParams.get("verify") === "1";

        if (!paymentIntent) {
          showError();
          return;
        }

        // Check payment status
        fetch(
          API_BASE + "/check-payment-status/?payment_intent=" + paymentIntent,
        )
          .then(function (r) {
            if (r.ok) return r.json();
            throw new Error("Failed to check payment status");
          })
          .then(function (data) {
            if (data.success) {
              showSuccess();

              // Show verification notice if needed
              if (data.verification_required || shouldVerify) {
                document
                  .getElementById("verification-notice")
                  .classList.remove("hidden");
              }

              // Show order details if available
              if (data.order) {
                document
                  .getElementById("order-details")
                  .classList.remove("hidden");
                document.getElementById("order-id").textContent = data.order.id;
                document.getElementById("order-total").textContent =
                  data.order.total.toFixed(2);
              }

              // Show email if available
              if (data.email) {
                document
                  .getElementById("email-info")
                  .classList.remove("hidden");
                document.getElementById("order-email").textContent = data.email;
              }
            } else {
              showError();
            }
          })
          .catch(function (error) {
            console.error("Error checking payment status:", error);
            showError();
          });
      }

      // Check payment status on page load
      document.addEventListener("DOMContentLoaded", function () {
        checkPaymentStatus();
      });
    })();
  </script>
</BaseLayout>
