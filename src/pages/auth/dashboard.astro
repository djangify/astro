<script>
  import { authStore } from "../../stores/authStore";
  import { resendVerification } from "../../lib/auth";

  document.addEventListener("DOMContentLoaded", function () {
    const welcomeHeading = document.getElementById("dashboard-welcome");
    const emailAlert = document.getElementById("email-verification-alert");
    const resendButton = document.getElementById("resend-verification");
    const accountStatus = document.getElementById("account-status");

    // Initialize dashboard
    updateDashboard();

    // Subscribe to auth state changes
    authStore.subscribe(() => {
      updateDashboard();
    });

    // Resend verification email
    resendButton?.addEventListener("click", async function () {
      const state = authStore.getState();
      const userEmail = state.user?.email;

      if (!userEmail) return;

      try {
        resendButton.textContent = "Sending...";
        (resendButton as HTMLButtonElement).disabled = true;

        await resendVerification(userEmail);

        resendButton.textContent = "Email sent!";
        (resendButton as HTMLButtonElement).disabled = true;

        setTimeout(() => {
          resendButton.textContent = "Resend verification email";
          (resendButton as HTMLButtonElement).disabled = false;
        }, 3000);
      } catch (error: unknown) {
        console.error("Failed to resend verification:", error);
        resendButton.textContent = "Failed to send";

        setTimeout(() => {
          resendButton.textContent = "Resend verification email";
          (resendButton as HTMLButtonElement).disabled = false;
        }, 3000);
      }
    });

    function updateDashboard() {
      const state = authStore.getState();
      const user = state.user;

      if (!user) {
        // Redirect to login if not authenticated
        window.location.href =
          "/auth/login?redirect=" +
          encodeURIComponent(window.location.pathname);
        return;
      }

      // Update welcome message
      const fullName = authStore.getUserFullName();
      const firstName = authStore.getUserFirstName(); // You'll need to add this method
      if (welcomeHeading) {
        if (firstName && firstName.trim()) {
          welcomeHeading.textContent = `Hello ${firstName}!`;
        } else {
          welcomeHeading.textContent = "Hello!";
        }
      }

      // Show/hide email verification alert
      const isVerified = authStore.isEmailVerified();
      if (emailAlert) {
        if (isVerified) {
          emailAlert.classList.add("hidden");
        } else {
          emailAlert.classList.remove("hidden");
        }
      }

      // Update account status
      if (accountStatus) {
        if (isVerified) {
          accountStatus.textContent = "Verified";
          accountStatus.className = "text-lg font-semibold text-green-600";
        } else {
          accountStatus.textContent = "Pending";
          accountStatus.className = "text-lg font-semibold text-yellow-600";
        }
      }

      // Load dashboard data including courses and products
      loadDashboardData();
    }

    async function loadDashboardData() {
      // Load courses, products, and activity
      await Promise.all([
        loadDashboardCourses(),
        loadDashboardProducts(),
        loadRecentActivity(),
      ]);

