---
// src/pages/auth/register.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import RegisterForm from "../../components/auth/RegisterForm.astro";
---

<BaseLayout>
  <title slot="title">Sign Up – Corrison</title>
  <meta
    slot="head"
    name="description"
    content="Create your Corrison account to access courses, dashboard, and exclusive content."
  />

  <main
    class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8"
  >
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <!-- Logo -->
      <div class="flex justify-center items-center mb-8">
        <div
          class="w-12 h-12 bg-teal-700 flex items-center justify-center rounded-lg mr-3"
        >
          <span class="text-white text-2xl font-bold italic">C</span>
        </div>
        <span class="text-teal-700 font-bold text-2xl">Corrison</span>
      </div>

      <!-- Register Form Card -->
      <div class="bg-white py-8 px-4 shadow-lg sm:rounded-lg sm:px-10">
        <RegisterForm />
      </div>

      <!-- Additional Links -->
      <div class="mt-8 text-center">
        <div class="text-sm text-gray-600">
          <a href="/" class="text-teal-600 hover:text-teal-500 font-medium">
            ← Back to Home
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  /* Ensure the main content takes full height */
  main {
    min-height: calc(100vh - 120px); /* Adjust based on header/footer height */
  }
</style>
